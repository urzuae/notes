<div class="container">
  <div class="row pt-4">
      <div class="col-4 shadow p-3 mb-5 bg-white rounded">
        <section id="breadcrumbs">
          	<% @folder.get_parents.each do |parent| %>
  				/ <%= link_to parent[:name], parent[:url] %>
  			<% end %>
  			/ <%= @folder.name %>
  			<%= render "folders/index", folders: @folders %>
        </section>

        <div>
          <%= render "folders/form", current_folder: @current_folder %>
        </div>
      </div>

      <div class="col-7 offset-1 shadow p-3 mb-5 bg-white rounded">
        <section id="list">
          <%= render "notes/index", notes: @notes %>
        </section>

        <div>
          <%= render "notes/form", current_folder: @current_folder %>
        </div>
      </div>
  </div>
</div>