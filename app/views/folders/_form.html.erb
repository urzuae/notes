<div>
<h4>New Folder</h4>
<%= form_for Folder.new do |f| %>
  <%= f.label :name, "Folder Title: ", class: 'form-label' %>
  <%= f.text_field :name, placeholder: "New Folder", class: 'form-control' %>
  <%= f.hidden_field :parent_id, value: current_folder&.id %>
  <br/>
  <%= submit_tag "Create Folder", class: 'btn' %>
<% end %>
</div>
